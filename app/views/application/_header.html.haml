.navbar.navbar-static-top
  .navbar-header
    = link_to 'Home', root_path, class: 'navbar-brand'
  .collapse.navbar-collapse
    - if user_signed_in?
      %ul.nav.navbar-nav
        %li= link_to 'My Account', transactions_path
      %ul.nav.navbar-nav
        %li.dropdown
          = link_to 'Categories', class: 'dropdown-toggle', "data-toggle" => "dropdown", "aria-expanded" => false do 
            Categories
            %span{class: 'caret'}
          %ul{class: 'dropdown-menu'}
            %li= link_to "Incomes", income_categories_path
            %li= link_to "Expenses", expense_categories_path
      %ul.nav.navbar-nav
        %li.dropdown
          = link_to 'Reports', class: 'dropdown-toggle', 'data-toggle' => 'dropdown', 'aria-expanded' => false do
            Reports
            %span.caret
              %ul.dropdown-menu
                %li= link_to 'Expenses', expenses_reports_path, "data-no-turbolink" =>true
      %ul.nav.navbar-nav.navbar-right
        %li.dropdown
          = link_to "#{current_user.username}", class: 'dropdown-toggle', 'data-toggle' => 'dropdown', 'aria-expanded' => false do
            #{current_user.username}
            %span.carent
              %ul.dropdown-menu
                %li= link_to 'Profile', edit_user_registration_path
                %li= link_to "Logout", destroy_user_session_path, method: :delete
        %li= link_to ""

