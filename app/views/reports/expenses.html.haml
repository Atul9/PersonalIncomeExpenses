%center
  %h3 Expenses Report
= render 'expenses_search'
- if defined? @report
  .panel
    %table.table.table-bordered.table-striped.align-to-left#expenses
      %thead
        %th Category
        %th Date
        %th Amount
      %tbody
        - @report.each do |expense|
          %tr
            %td= expense.expense_category.expense_source
            %td= expense.record_date
            %td= expense.amount

- if @report
  :coffeescript
    $('#expenses').dataTable
      "sPaginationType": "full_numbers"
